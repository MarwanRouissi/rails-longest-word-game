<div class="container">
  <h1>New game</h1>
  <div class="d-flex">
    <% @letters.each do |letter| %>
    <div class="p-3 border m-2 bg-primary text-white fs-4 font-weight-bold"><%= letter %></div>
    <% end %>
  </div>
<form action="/score" method="post" data-turbo="false">
  <label for="word">What is the longest word you can find?</label>
  <div class="input-group mb-3">
    <input type="text" name="word" class="form-control">
    <input type="submit" value="Play">
  </div>
  <%= hidden_field_tag :grid, @letters %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token  %>
</form>
</div>
